# Host repo paths (use POSIX /c/... so Docker Desktop can mount them correctly)
TARGET_REPO_HOST_PATH=/c/Source/GIT/Rysky
OPENEVOLVE_SRC_HOST_PATH=/c/Source/GIT/OpenEvolve

# Model + API settings
OLLAMA_BASE_URL=http://host.docker.internal:8000/v1
OLLAMA_MODEL=qwen2.5-coder:7b
PRIMARY_MODEL=qwen2.5-coder:7b
SECONDARY_MODEL=qwen2.5-coder:7b

# OpenEvolve config
OE_REPO_DIR=/workspace/target
OE_TARGET_FILE=api.py
OPENAI_API_BASE=http://host.docker.internal:8000/v1
OPENAI_API_KEY=ollama
OE_RUN_MODE=evolve
# run in evolution mode (bypass pytest)
OE_INITIAL=/workspace/target/api.py
OE_EVAL=/workspace/openevolve/evaluation.py
OE_DISABLE_PYTEST_FALLBACK=1
OE_ITERATIONS=20

OE_PROMPT_TEMPLATE_DIR=/workspace/openevolve_custom_templates
OE_SYSTEM_TEMPLATE_NAME=evaluator_system_message
OE_USER_TEMPLATE_NAME=mutate_user_message

OE_ALLOWED_FILES=api.py,data_layer.py

# --- Quality-of-life ---
PYTHONUNBUFFERED=1
PIP_DISABLE_PIP_VERSION_CHECK=1
